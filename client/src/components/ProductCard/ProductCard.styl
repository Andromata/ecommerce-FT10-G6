.product-card
  display grid
  grid-template 150px 3rem 1rem / 1fr 1fr 1fr
  width 300px
  margin-bottom 25px
  background #fafafa
  box-shadow 0 0 5px rgba(0, 0, 0, 0.2)
  & > h4
    grid-area 2 / 1 / 3 / 4
    margin-left 1rem
  & > h6
    grid-area 3 / 1 / 4 / 3
    margin-left 1rem
  & img
    grid-area 1 / 1 / 2 / 4
    width 300px
    height 150px
    object-fit cover

